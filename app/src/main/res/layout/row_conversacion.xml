<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

        <com.pkmmte.view.CircularImageView
            android:id="@+id/imagencontacto_"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/enso2_sk"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomcontacto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="5dp"
                android:text="CONTACTO"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/Blue800"/>

            <TextView
                android:id="@+id/lastmsn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="TELEFONO"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/Blue_LightSkyBlue"/>
        </LinearLayout>

        <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fechahora"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:text="CONTACTO"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/Blue800"/>

            <TextView
                android:id="@+id/nummsn"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="7sp"
                android:textStyle="bold"
                android:background="@drawable/circlemsn"
                android:textColor="@android:color/white"/>
    </LinearLayout>
    </TableRow>
</TableLayout>